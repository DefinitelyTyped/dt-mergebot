{
    "compilerOptions": {
        "outDir": "dist",
        "strict": true,
        "module": "commonjs",
        "target": "es2018",
        "lib": ["esnext"],
        "types": ["node"],
        "sourceMap": true,
        "resolveJsonModule": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "rootDir": ".",
        "skipLibCheck": true
    }
}
