{
    "include": ["src"],
    "exclude": ["src/use-pr-info.ts", "src/rules.ts"],
    "compilerOptions": {
        "outDir": "bin",
        "rootDir": "src",
        "strict": true,
        "module": "commonjs",
        "target": "es6",
        "lib": ["esnext"],
        "types": ["node"],
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "skipLibCheck": true
    }
}
