{
    "references": [
        { "path": "src" },
        { "path": "PR-Trigger" }
    ],
    "compilerOptions": {
        "composite": true,
        "strict": true,
        "module": "commonjs",
        "target": "es6",
        "lib": ["esnext"],
        "types": ["node"],
        "sourceMap": true,
        "resolveJsonModule": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true
    }
}
