{
  "name": "dt-mergebot",
  "version": "3.0.0",
  "description": "The bot that manages DefinitelyTyped PRs.",
  "author": "DT Maintainers",
  "homepage": "https://github.com/DefinitelyTyped/dt-mergebot#readme",
  "main": "dist/functions/*.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/DefinitelyTyped/dt-mergebot.git"
  },
  "bugs": {
    "url": "https://github.com/DefinitelyTyped/dt-mergebot/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@apollo/client": "^3.9.2",
    "@azure/functions": "^4.0.0-alpha.1",
    "@definitelytyped/old-header-parser": "npm:@definitelytyped/header-parser@0.0.178",
    "@octokit/webhooks": "^9.5.1",
    "dayjs": "^1.10.3",
    "fast-json-patch": "^3.0.0-1",
    "fs-extra": "^9.0.1",
    "graphql": "15.8.0",
    "prettyjson": "^1.2.1",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@endemolshinegroup/cosmiconfig-typescript-loader": "^3.0.2",
    "@octokit/graphql-schema": "^10.11.0",
    "@octokit/webhooks-methods": "^2.0.0",
    "@octokit/webhooks-types": "^5.8.0",
    "@types/fs-extra": "^4.0.11",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.19.14",
    "@types/prettyjson": "^0.0.29",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "apollo": "^2.34.0",
    "azure-functions-core-tools": "^4.0.5455",
    "eslint": "^8.51.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "jest": "^29.5.0",
    "jest-file-snapshot": "^0.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "pnpm": {
    "overrides": {
      "apollo>graphql": "15.8.0",
      "apollo-language-server>graphql": "15.8.0"
    },
    "updateConfig": {
      "ignoreDependencies": [
        "@definitelytyped/header-parser"
      ]
    }
  },
  "scripts": {
    "prestart": "pnpm run build",
    "prepublishOnly": "pnpm run build",
    "build": "tsc",
    "watch": "tsc --watch",
    "graphql-schema": "apollo client:codegen schema --target typescript --globalTypesFile=src/queries/schema/graphql-global-types.ts",
    "create-fixture": "pnpm run build && node dist/commands/create-fixture.js",
    "update-test-data": "pnpm run build && node dist/commands/update-test-data.js",
    "update-all-fixtures": "pnpm run build && node dist/commands/update-all-fixtures.js",
    "start": "func start",
    "deploy": "func azure functionapp publish dtmergebot2",
    "lint": "eslint --report-unused-disable-directives .",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
