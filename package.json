{
  "name": "dt-mergebot",
  "version": "3.0.0",
  "description": "The bot that manages DefinitelyTyped PRs.",
  "author": "DT Maintainers",
  "homepage": "https://github.com/DefinitelyTyped/dt-mergebot#readme",
  "main": "dist/functions/*.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/DefinitelyTyped/dt-mergebot.git"
  },
  "bugs": {
    "url": "https://github.com/DefinitelyTyped/dt-mergebot/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@apollo/client": "^3.9.11",
    "@azure/functions": "^4.4.0",
    "@definitelytyped/old-header-parser": "npm:@definitelytyped/header-parser@0.0.178",
    "@definitelytyped/utils": "^0.1.6",
    "dayjs": "^1.11.10",
    "fast-json-patch": "^3.1.1",
    "graphql": "15.8.0",
    "prettyjson": "^1.2.5",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@octokit/graphql-schema": "^14.58.0",
    "@octokit/webhooks-methods": "^5.1.0",
    "@octokit/webhooks-types": "^7.5.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.31",
    "@types/prettyjson": "^0.0.33",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "apollo": "^2.34.0",
    "azure-functions-core-tools": "^4.0.5611",
    "eslint": "^8.57.0",
    "eslint-plugin-unicorn": "^52.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-file-snapshot": "^0.5.0",
    "knip": "^5.9.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "pnpm": {
    "overrides": {
      "apollo>graphql": "15.8.0",
      "apollo-language-server>graphql": "15.8.0"
    },
    "updateConfig": {
      "ignoreDependencies": [
        "@definitelytyped/header-parser"
      ]
    }
  },
  "scripts": {
    "prestart": "pnpm run build",
    "prepublishOnly": "pnpm run build",
    "build": "tsc",
    "watch": "tsc --watch",
    "graphql-schema": "apollo client:codegen schema --target typescript --globalTypesFile=src/queries/schema/graphql-global-types.ts",
    "create-fixture": "pnpm run build && node dist/commands/create-fixture.js",
    "update-test-data": "pnpm run build && node dist/commands/update-test-data.js",
    "update-all-fixtures": "pnpm run build && node dist/commands/update-all-fixtures.js",
    "start": "func start",
    "deploy": "func azure functionapp publish dtmergebot2",
    "lint": "eslint --report-unused-disable-directives .",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "packageManager": "pnpm@8.15.7+sha256.50783dd0fa303852de2dd1557cd4b9f07cb5b018154a6e76d0f40635d6cee019"
}
